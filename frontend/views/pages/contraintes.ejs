<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <!-- <header> -->
    <%- include('../partials/navbar'); %>
    <!-- </header> -->

    <div class="mt-12 text-white flex flex-col justify-center items-center">
        <div class="py-10 px-10 text-center rounded shadow-2xl backdrop-blur-lg backdrop-saturate-125 bg-black bg-opacity-20 border border-white border-opacity-50">
            <p>CONTRAINTES PAGES</p>
        </div>
    </div>

    <% if (locals.startSoutenance) { %>
    <div class="py-10 px-10 text-center rounded shadow-2xl backdrop-blur-lg backdrop-saturate-125 bg-black bg-opacity-20 border border-white border-opacity-50 ">
      <form id="formContraintesCreneaux"> 
        <% for(var i=0; i <= nombre_jours; i++) {%>
          <div class="py-10 px-10 text-center rounded inline-block">
            <p>Jour <%= i+1 %> : </p>
            <form id="formContraintesCreneaux">           
              <% for(var j=0; j < creneaux.length; j++) {%>
                <label for="creneauInput"><%= creneaux[j] %></label>
                <input type="checkbox" id="creneauInput" name="creneauInput" checked>
                <br>
              <% } %>            
          </div>

        <% } %>
        <br>
        <input type="submit" name="submit">
      </form>
    </div>
    <% } %>
    <!-- <footer> -->
    <%- include('../partials/footer'); %>
    <!--</footer> -->
    <script src="/static/js/contraintes.js"></script>
</body>

</html>